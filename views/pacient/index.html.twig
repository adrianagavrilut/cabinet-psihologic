{% extends "base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="/assets/quill/quill.snow.css" rel="stylesheet" type="text/css" />
{% endblock %}

{% block navbar %}
<nav class="navbar navbar-expand-lg navbar-light fixed-top py-3 d-block" data-navbar-on-scroll="data-navbar-on-scroll">
    <div class="container"><a class="navbar-brand" href="/"><img src="/assets/img/logo.png" width="100" alt="logo" /></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"> </span></button>
    <div class="collapse navbar-collapse border-top border-lg-0 mt-4 mt-lg-0" id="navbarSupportedContent">
        <ul class="navbar-nav ms-auto pt-2 pt-lg-0 font-base">
        <li class="nav-item px-2"><a class="nav-link fs-1" href="#tests">Testele mele</a></li>
        <li class="nav-item px-2"><a class="nav-link fs-1" href="#istoric">Istoric</a></li>
        <li class="nav-item px-2"><a class="nav-link fs-1" href="/pacient/chat">Chat</a></li>
        <li class="nav-item px-2"><a class="nav-link fs-1" href="/pacient/portofoliu">Portofoliu</a></li>
        <li class="nav-item px-2"><a class="nav-link fs-1" href="#footer">Contact</a></li>
        </ul><a class="btn btn-sm btn-outline-primary rounded-pill order-1 order-lg-0 ms-lg-4 px-5 fs-1" href="/admin/logout.php">Log Out</a>
    </div>
    </div>
</nav>
{% endblock %}

{% block content %}
    <section class="py-xxl-9" id="home">
        <div class="bg-holder bg-size" style="background-image:url(/assets/img/header-bg.png);background-position:top center;background-size:cover;"></div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="px-5">Bine ai revenit, {{ pacient.nume }}!</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="py-5" id="tests">
        <div class="bg-holdr bg-size" style="background-image:url(/assets/img/about-bg.png);background-position:top center;background-size:contain;"></div>
        <div class="container">
            <div class="row">
                <div class="col mb-5">
                    <h2>Testele mele</h2>
                </div>
            </div>
            <div class="row">
                {% if result %}
                    {% for item in result %}
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <div class="card shadow h-100">
                                <h4 class="card-header py-3">{{ item.test.denumire }}</h4>
                                <div class="card-body d-flex flex-column">
                                    <p class="card-text flex-grow-1">{{ item.test.descriere | raw }}</p>
                                    <a href="/pacient/test?id_test={{ item.test.id }}" class="btn btn-sm btn-outline-secondary rounded-pill mt-auto align-self-end">Show Q&amp;A</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <div class="col">
                        <div class="alert alert-secondary" role="alert">Încă nu aveți teste atribuite!</div>
                    </div>
                {% endif %}
            </div>
        </div>
    </section>

    <section id="istoric">
        <div class="container">
        <div class="row">
            <div class="col">
                <h2 class="mb-5">Anamneză</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 mb-5">
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit.Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
            </div>
        </div>
        <hr class="mb-5">
        <form data-pacient-id="{{ pacient.id }}">
            <div class="row">
                <div class="col-md-6 mb-3 px-lg-5 text-center">
                    <div class="row">
                        <div class="col-md-6 mb-3" style="position: relative;">
                            <label for="bunic_p" class="form-label">Bunicul patern</label>
                            <input class="form-control form-control-sm rounded-pill text-center text-dark fs-1 bg-light js-ancestor" id="bunic_p" name="bunic_p" placeholder="Scrieți istoricul medical" data-field-name="bunic_p" value="{{ pacient.bunic_p | default("") }}">
                            <div class="line-bp"></div>
                            <div class="line-bpt"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="bunica_p" class="form-label">Bunica paternă</label>
                            <input class="form-control form-control-sm rounded-pill text-center text-dark fs-1 bg-light js-ancestor" id="bunica_p" name="bunica_p" placeholder="Scrieți istoricul medical" data-field-name="bunica_p" value="{{ pacient.bunica_p | default("") }}">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mb-3" style="position: relative;">
                            <label for="tata" class="form-label">Tata</label>
                            <input class="form-control form-control-sm rounded-pill text-center text-dark fs-1 bg-light js-ancestor" id="tata" name="tata" placeholder="Scrieți istoricul medical" data-field-name="tata" value="{{ pacient.tata | default("") }}">
                            <div class="line-p"></div>
                            <div class="line-c"></div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3 px-lg-5 text-center">
                    <div class="row">
                        <div class="col-md-6 mb-3" style="position: relative;">
                            <label for="bunic_m" class="form-label">Bunicul matern</label>
                            <input class="form-control form-control-sm rounded-pill text-center text-dark fs-1 bg-light js-ancestor" id="bunic_m" name="bunic_m" placeholder="Scrieți istoricul medical" data-field-name="bunic_m" value="{{ pacient.bunic_m | default("") }}">
                            <div class="line-bm"></div>
                            <div class="line-bmc"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="bunica_m" class="form-label">Bunica maternă</label>
                            <input class="form-control form-control-sm rounded-pill text-center text-dark fs-1 bg-light js-ancestor" id="bunica_m" name="bunica_m" placeholder="Scrieți istoricul medical" data-field-name="bunica_m" value="{{ pacient.bunica_m | default("") }}">
                        </div>
                    </div>
                    <div class="row">
                        {# <div class="col-md-12 mb-3">
                            <label for="mama" class="form-label">Mama</label>
                            <textarea class="form-control form-control-sm rounded-pill text-center text-dark fs-1 bg-light js-ancestor" id="mama" name="mama" placeholder="Scrieți istoricul medical" data-field-name="mama">{{ pacient.mama | default("") }}</textarea>
                        </div> #}
                        <div class="col-md-12 mb-3">
                            <label for="mama" class="form-label">Mama</label>
                            <input class="form-control form-control-sm rounded-pill text-center text-dark fs-1 bg-light js-ancestor" id="mama" name="mama" placeholder="Scrieți istoricul medical" data-field-name="mama" value="{{ pacient.mama | default("") }}">
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col mb-3">
                    <p class="text-center fs-1 fw-medium">{{ pacient.nume }}</p>
                </div>
            </div>
            <hr>
        </form>
    </section>
{% endblock %}

{% block javascripts%}
    {{ parent() }}
    <script src="/assets/js/istoric.js"></script>
    <script src="/assets/quill/quill.js" type="text/javascript"></script>
    <script src="/assets/js/wysiwyg.js"></script>
{% endblock %}