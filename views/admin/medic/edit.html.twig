{% extends "admin/base.html.twig" %}

{% block content %}
    <div class="row">
        <div class="col">
            <h1 class="h1 mb-4 text-gray-800">Modifică psiholog</h1>
        </div>
    </div>
    
    <div class="row">
        <div class="col">
            <form action="/admin/medic/edit.php?id={{id}}" method="POST" enctype="multipart/form-data">
                <div class="form-row mb-3">
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="nume">Nume</label>
                        <input type="text" id="nume" placeholder="Scrieți numele medicului" class="form-control  {% if errors['nume'] is defined %}is-invalid{% endif %}" name="nume" value="{{ doctor is defined ? doctor.nume : '' }}" />
                        {% if errors['nume'] is defined %}
                            <div class="invalid-feedback">
                                {{ errors['nume'] }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-12 col-md-6">
                        <label for="email">Email</label>
                        <input type="email" class="form-control {% if errors['email'] is defined %}is-invalid{% endif %}" id="email" placeholder="Scrieți adresa de email" name="email" value="{{ doctor is defined ? doctor.email : '' }}">
                        {% if errors['email'] is defined %}
                            <div class="invalid-feedback">
                                {{ errors['email'] }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="form-row mb-3">
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="telefon">Telefon</label>
                        <input type="text" id="telefon" placeholder="Scrieți numarul de telefon al medicului" class="form-control  {% if errors['telefon'] is defined %}is-invalid{% endif %}" name="telefon" value="{{ doctor is defined ? doctor.telefon : '' }}" />
                        {% if errors['telefon'] is defined %}
                            <div class="invalid-feedback">
                                {{ errors['telefon'] }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="adresa">Adresă</label>
                        <input type="text" id="adresa" placeholder="Scrieți adresa medicului" class="form-control  {% if errors['adresa'] is defined %}is-invalid{% endif %}" name="adresa" value="{{ doctor is defined ? doctor.adresa : '' }}" />
                        {% if errors['adresa'] is defined %}
                            <div class="invalid-feedback">
                                {{ errors['adresa'] }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="form-row mb-3">
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="specialitate">Specialitate</label>
                        <input type="text" id="specialitate" placeholder="Scrieți specialitatea medicului" class="form-control  {% if errors['specialitate'] is defined %}is-invalid{% endif %}" name="specialitate" value="{{ doctor is defined ? doctor.specialitate : '' }}" />
                        {% if errors['specialitate'] is defined %}
                            <div class="invalid-feedback">
                                {{ errors['specialitate'] }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="col-12 col-md-6">
                        <label class="form-label" for="data_nasterii">Data nașterii</label>
                        <input type="text" id="data" placeholder="Scrieți data nașterii medicului" class="form-control  {% if errors['data_nasterii'] is defined %}is-invalid{% endif %}" name="data_nasterii" value="{{ doctor is defined ? doctor.data_nasterii : '' }}" />
                        {% if errors['data_nasterii'] is defined %}
                            <div class="invalid-feedback">
                                {{ errors['data_nasterii'] }}
                            </div>
                        {% endif %}
                    </div>
                </div>
                <div class="form-row mb-3">
                    <div class="col-12 col-md-6">
                        <div>
                            <label class="form-label" for="imagine">Imagine</label>
                        </div>
                        <div>
                            <input type="file" id="imagine" class="{% if errors['imagine'] is defined %}is-invalid{% endif %}" name="imagine" accept="image/*" />
                            {% if errors['imagine'] is defined %}
                                <div class="invalid-feedback">
                                    {{ errors['imagine'] }}
                                </div>
                            {% endif %}
                        </div>
                        {% if doctor is defined and doctor.imagine %}
                            <div class="admin-img-thumb" style="background-image: url('/assets/img/profil/{{ doctor.imagine }}');"></div>
                        {% endif %}
                    </div>
                </div>

                <div class="row">
                    <div class="d-grid gap-2 col-6 my-5 d-flex justify-content-start">
                        <a href="/admin/medic" class="btn btn-secondary px-5 rounded-pill"><h4 class="m-0">Anulare</h4></a>
                    </div>
                    <div class="d-grid gap-2 col-6 my-5 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary px-5 rounded-pill"><h4 class="m-0">Salvare</h4></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="/assets/js/initDatepicker.js"></script>
{% endblock %}