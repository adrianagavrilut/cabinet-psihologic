{% extends "admin/base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css" rel="stylesheet" type="text/css" />

{% endblock %}

{% block content %}
    <div class="row">
        <div class="col">
            <h1 class="h1 mb-4 text-gray-800">Modifică întrebarea</h1>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <form action="/admin/test/intrebare/edit.php?id_test={{ id_test }}&id={{ id }}" method="POST">
                <div class="form-row mb-3">
                    <div class="col-12">
                        <div class="form-group">
                            <textarea name="continut" class="form-control editor">{{ intrebare is defined ? intrebare.continut : '' }}</textarea>
                        </div>
                        {% if errors['continut'] is defined %}
                            <div class="invalid-feedback">
                                {{ errors['continut'] }}
                            </div>
                        {% endif %}
                    </div>
                </div>

                <div class="row">
                    <div class="d-grid gap-2 col-6 my-5 d-flex justify-content-start">
                        <a href="/admin/test/intrebare/?id_test={{ id_test }}" class="btn btn-secondary px-5 rounded-pill"><h4 class="m-0">Anulare</h4></a>
                    </div>
                    <div class="d-grid gap-2 col-6 my-5 d-flex justify-content-end">
                        <button type="submit" class="btn btn-primary px-5 rounded-pill"><h4 class="m-0">Salvare</h4></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js" type="text/javascript"></script>
    <script src="/assets/js/initEditor.js"></script>
{% endblock %}