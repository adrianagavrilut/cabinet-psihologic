        </div>
        </div>
    </nav>
{% endblock %}

{% block content %}

    <section class="py-xxl-9" id="home">
        <div class="bg-holder bg-size" style="background-image:url(/assets/img/header-bg.png);background-position:top center;background-size:cover;"></div>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="px-8">Articole publicate</h1>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="row mb-5">
                <div class="col">
                    <form action="/blog/search/index.php" method="GET" class="d-flex">
                        <input type="text" name="search" class="form-control custom-input rounded-pill me-2" placeholder="Caută articole..." required>
                        <button type="submit" class="btn btn-sm btn-outline-primary rounded-pill px-5"><i class="fas fa-search"></i></button>
                    </form>
                </div>
            </div>
            <div class="row">
                {% for articol in articole %}
                <div class="col-sm-6 col-lg-3 mb-4">
                    <div class="card h-100 shadow card-span rounded-3 article-thumb" style="background-image: url('/assets/img/blog/{{ articol.imagine }}');">
                        <div class="card-body">
                            <div class="article-teaser p-3">
                                <span class="fs--1 text-primary me-3">{{ articol.categorie }}</span>
                                <i class="far fa-calendar"></i>
                                <span class="fs--1 text-900">{{ articol.publicare }}</span>
                                <span class="fs--1"></span>
                                <h5 class="font-base fs-lg-0 fs-xl-1 my-3">{{ articol.titlu }}</h5>
                                <a class="stretched-link" href="/blog/articol?id_articol={{ articol.id }}">Citește articol</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}